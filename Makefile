# ============================================
# W2M - Makefile
# ============================================
# Common commands for development and production

.PHONY: dev prod build test clean logs shell stats help

# Variables
IMAGE_NAME := w2m
CONTAINER_NAME := w2m

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Development
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Start in development mode with hot-reload (simulates t3.small)
dev:
	@echo "ğŸ”§ Starting in development mode..."
	@chmod +x scripts/dev.sh
	@./scripts/dev.sh

## Start in development mode (force rebuild)
dev-rebuild:
	@echo "ğŸ”§ Full rebuild..."
	docker-compose build --no-cache
	docker-compose up

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Production (local testing)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Start in production mode (for local testing)
prod:
	@echo "ğŸš€ Starting in production mode..."
	BUILD_TARGET=production docker-compose up --build

## Build production image
build:
	@echo "ğŸ“¦ Building production image..."
	docker build --target production -t $(IMAGE_NAME):latest .

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Testing
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Run tests
test:
	@echo "ğŸ§ª Running tests..."
	npm run test

## Run tests with coverage
test-coverage:
	@echo "ğŸ§ª Tests with coverage..."
	npm run test:coverage

## Run linter
lint:
	@echo "ğŸ” Running linter..."
	npm run lint

## Verify TypeScript types
typecheck:
	@echo "ğŸ“ Verifying types..."
	npm run typecheck

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Utilities
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## View container logs
logs:
	docker-compose logs -f $(CONTAINER_NAME)

## Open shell in container
shell:
	docker-compose exec $(CONTAINER_NAME) /bin/sh

## View resource statistics
stats:
	@echo "ğŸ“Š Resource usage:"
	docker stats $(CONTAINER_NAME) --no-stream

## Clean containers, volumes and images
clean:
	@echo "ğŸ§¹ Cleaning..."
	docker-compose down -v --remove-orphans
	rm -rf dist/
	rm -rf data/logs/*
	@echo "âœ… Cleanup completed"

## Clean EVERYTHING (including WhatsApp session)
clean-all: clean
	@echo "âš ï¸  Removing WhatsApp session..."
	rm -rf data/session/*
	@echo "âœ… Full cleanup completed"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Installation
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Install dependencies
install:
	@echo "ğŸ“¦ Installing dependencies..."
	npm ci

## Initial project setup
setup: install
	@echo "ğŸ“ Creating directories..."
	mkdir -p data/{session,vault,logs}
	@if [ ! -f .env ]; then \
		echo "ğŸ“ Creating .env..."; \
		cp env.example .env; \
	fi
	@echo "âœ… Setup completed"
	@echo ""
	@echo "Next steps:"
	@echo "  1. Edit .env with your values"
	@echo "  2. Run: make dev"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Help
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Show this help
help:
	@echo "============================================"
	@echo "W2M - Available Commands"
	@echo "============================================"
	@echo ""
	@grep -E '^## ' Makefile | sed 's/## //'
	@echo ""
	@echo "Usage: make <command>"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[36m%-15s\033[0m %s\n", $$1, $$2}'

# Default
.DEFAULT_GOAL := help
