{
  "name": "w2m",
  "version": "0.1.0",
  "description": "WhatsApp to Markdown - Universal ingestion framework for PKM",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch --exclude 'dist/**' --exclude 'node_modules/**' --exclude 'data/**' src/index.ts",
    "build": "tsc",
    "start": "node --max-old-space-size=384 dist/index.js",
    "start:dev": "NODE_ENV=development tsx src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "whatsapp",
    "markdown",
    "pkm",
    "personal-knowledge-management",
    "obsidian",
    "logseq",
    "automation",
    "note-taking"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "dotenv": "^16.4.5",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "qrcode-terminal": "^0.12.0",
    "simple-git": "^3.27.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
